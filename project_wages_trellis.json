{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
         
    "title": {
        "text": "Comparing Nomial Wage Growth",
        "subtitle":["Year On Year Single Month Growth, Nominal Terms. Source: ONS.",""],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black"},
        
    "data": {
        "url": "https://raw.githubusercontent.com/denianomeri/denianomeri.github.io/main/Book14.csv"
        },
    
    "transform": [
        {"fold":["Services", "Finance", "Public_sector_excluding_finance", "Manufacturing", "Construction", "Wholesailing"], "as": ["country", "GDP"]}
        ],
          
    "height": 150,
    "width": 200,   
    
    "mark": {   
            "type":"bar",
            "strokeWidth":2},    
    
    "encoding": {
            "x": {
                "field": "Year",
                "type": "temporal",
                "title":null,
                "axis":{"grid": false}},
    
            "y": {
                "field": "GDP",
                "type": "quantitative",
                "title": null},
    
            "facet": {
                "field": "country",
                "columns": 2,
                "title":null}
    },
  
      "resolve": {"scale": {"y": "independent"}}
  }